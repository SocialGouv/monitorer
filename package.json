{
  "name": "@socialgouv/monitorer",
  "version": "1.0.0-alpha.8",
  "description": "A deploy-in-one-click web services uptime monitorer.",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "ci:generate:release_notes": "node ./scripts/ci/generate_release_notes.js",
    "dev": "yarn dev:docker && concurrently \"yarn dev:worker\" \"yarn dev:web\"",
    "dev:docker": "docker-compose start db",
    "dev:web": "nodemon --watch ./src/shared --watch ./src/web ./src/web",
    "dev:worker": "nodemon --watch ./src/shared --watch ./src/worker ./src/worker",
    "setup": "cpy --rename=\".env\" ./.env.example . && docker-compose down -v && docker-compose up -d db && docker-compose stop",
    "start:web": "node ./src/web/index.js",
    "start:worker": "node ./src/worker/index.js",
    "test": "yarn test:lint && yarn test:unit",
    "test:lint": "eslint .",
    "test:unit": "jest",
    "test:watch": "yarn test:unit --watch",
    "preversion": "yarn test",
    "version": "node ./scripts/ci/release.js",
    "postversion": "git push origin HEAD && git push --tags"
  },
  "dependencies": {
    "@editorjs/editorjs": "2.16.1",
    "@inspired-beings/log": "1.2.0",
    "ajv": "6.11.0",
    "art-template": "4.13.2",
    "axios": "0.19.2",
    "cheerio": "1.0.0-rc.3",
    "cron": "1.8.2",
    "dotenv": "8.2.0",
    "koa": "2.11.0",
    "koa-art-template": "1.1.1",
    "koa-bodyparser": "4.2.1",
    "koa-router": "8.0.7",
    "koa-static": "5.0.0",
    "mongoose": "5.8.11",
    "node-cache": "5.1.0",
    "numeral": "2.0.6",
    "ramda": "0.27.0",
    "yaml": "1.7.2"
  },
  "devDependencies": {
    "@socialgouv/eslint-config-strict": "0.16.0",
    "@types/chart.js": "2.9.13",
    "@types/codemirror": "0.0.84",
    "@types/jest": "25.1.2",
    "@types/mongodb": "3.3.15",
    "colors": "1.4.0",
    "concurrently": "5.1.0",
    "cpy-cli": "3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-jsdoc": "21.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-sort-requires": "2.1.0",
    "jest": "25.1.0",
    "keep-a-changelog": "0.10.0",
    "nodemon": "2.0.2",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "shelljs": "0.8.3"
  },
  "engines": {
    "node": "12.15.0",
    "yarn": "1.22.0"
  }
}
